# ====================================
# Configurações do Ambiente - EnsaioNuvens
# ====================================
# Copie este arquivo para .env e ajuste os valores conforme necessário

# ===== CONFIGURAÇÕES GERAIS =====
# Nome da aplicação
VITE_APP_NAME=EnsaioNuvens

# Versão da aplicação
VITE_APP_VERSION=1.0.0

# URL base da API
# Exemplo: http://localhost:3001/api
VITE_API_URL=http://localhost:3001/api

# ===== CONFIGURAÇÕES DE DESENVOLVIMENTO =====
# Porta do servidor de desenvolvimento
VITE_PORT=3000

# Host do servidor de desenvolvimento
VITE_HOST=0.0.0.0

# Abrir navegador automaticamente ao iniciar o servidor
development
VITE_OPEN_BROWSER=true

# Ativar HTTPS (requer certificados válidos)
VITE_HTTPS=false
# VITE_SSL_CRT_FILE=caminho/para/certificado.crt
# VITE_SSL_KEY_FILE=caminho/para/chave.key

# ===== CONFIGURAÇÕES DE BUILD =====
# Diretório de saída para os arquivos compilados
VITE_OUT_DIR=dist

# Gerar sourcemaps para debug (true/false)
VITE_SOURCEMAP=true
VITE_CACHE_DIR=node_modules/.vite
VITE_CACHE_CLEAR_ON_START=false

# Configurações de logs
VITE_LOG_LEVEL=info
VITE_LOG_TIME=true
VITE_LOG_PREFIX=[vite]
